    "# ðŸ¥‡ RetailNova - Notebook 03: Gold Analytics Layer\n",
    "\n",
    "This notebook covers:\n",
    "1. Build Gold Star Schema dimensions + fact table\n",
    "2. Compute monthly KPIs (AOV, basket size, CLV, repeat purchase rate)\n",
    "3. RFM customer segmentation\n",
    "4. Cohort retention analysis\n",
    "5. Performance optimisation demo (broadcast joins, caching)\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "import sys\n",
    "sys.path.insert(0, '/home/jovyan')\n",
    "\n",
    "from pipelines.spark_session import build_spark_session\n",
    "from pyspark.sql import functions as F\n",
    "\n",
    "spark = build_spark_session('RetailNova-Notebook-Gold')\n",
    "print('âœ“ Spark ready')"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# â”€â”€ Build all Gold tables â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€\n",
    "from pipelines.gold_pipeline import run_gold_pipeline\n",
    "run_gold_pipeline(spark)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# â”€â”€ Read Gold tables â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€\n",
    "from pipelines.config import storage_config\n",
    "\n",
    "def gold(table):\n",
    "    return spark.read.format('delta').load(\n",
    "        storage_config.layer_path('gold', table)\n",
    "    )\n",
    "\n",
    "dim_date     = gold('dim_date')\n",
    "dim_customer = gold('dim_customer')\n",
    "dim_product  = gold('dim_product')\n",
    "dim_store    = gold('dim_store')\n",
    "fact_sales   = gold('fact_sales')\n",
    "\n",
    "print(f'dim_date:     {dim_date.count():,} rows')\n",
    "print(f'dim_customer: {dim_customer.count():,} rows')\n",
    "print(f'dim_product:  {dim_product.count():,} rows')\n",
    "print(f'dim_store:    {dim_store.count():,} rows')\n",
    "print(f'fact_sales:   {fact_sales.count():,} rows')"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# â”€â”€ Monthly KPIs â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€\n",
    "df_kpis = gold('agg_monthly_kpis')\n",
    "\n",
    "print('Monthly KPI Summary:')\n",
    "df_kpis.select(\n",
    "    'year_month', 'total_orders', 'total_revenue',\n",
    "    'unique_customers', 'avg_order_value',\n",
    "    'avg_basket_size', 'repeat_purchase_rate'\n",
    ").show(24, truncate=False)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# â”€â”€ Customer Segments (RFM) â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€\n",
    "df_segments = gold('customer_segments')\n",
    "\n",
    "print('RFM Segments:')\n",
    "df_segments.groupBy('segment').agg(\n",
    "    F.count('customer_id').alias('customer_count'),\n",
    "    F.round(F.avg('recency_days'), 1).alias('avg_recency_days'),\n",
    "    F.round(F.avg('frequency'), 1).alias('avg_frequency'),\n",
    "    F.round(F.avg('monetary'), 2).alias('avg_monetary')\n",
    ").orderBy('customer_count', ascending=False).show(truncate=False)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# â”€â”€ Cohort Retention Matrix â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€\n",
    "df_cohort = gold('cohort_analysis')\n",
    "\n",
    "print('Cohort Retention Table:')\n",
    "df_cohort.filter(F.col('order_period_months') <= 3).select(\n",
    "    'cohort_label', 'order_period_months',\n",
    "    'active_customers', 'cohort_size', 'retention_rate'\n",
    ").orderBy('cohort_label', 'order_period_months').show(truncate=False)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# â”€â”€ Star Schema Query: Revenue by Category + Month â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€\n",
    "# Demonstrates broadcast join optimisation:\n",
    "# dim_product is small â†’ automatically broadcast\n",
    "\n",
    "result = (\n",
    "    fact_sales\n",
    "    .join(F.broadcast(dim_product), on='product_id', how='left')\n",
    "    .groupBy('order_year', 'order_month', 'category')\n",
    "    .agg(\n",
    "        F.round(F.sum('line_amount'), 2).alias('total_revenue'),\n",
    "        F.count('line_id').alias('total_lines'),\n",
    "        F.sum('quantity').alias('total_qty'),\n",
    "    )\n",
    "    .orderBy('order_year', 'order_month', F.col('total_revenue').desc())\n",
    ")\n",
    "\n",
    "print('Revenue by Category and Month:')\n",
    "result.show(30, truncate=False)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# â”€â”€ Star Schema Query: Customer LTV ranking â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€\n",
    "result_ltv = (\n",
    "    fact_sales\n",
    "    .join(F.broadcast(dim_customer), on='customer_id', how='left')\n",
    "    .groupBy('customer_id', 'full_name', 'loyalty_tier', 'segment')\n",
    "    .agg(\n",
    "        F.round(F.sum('line_amount'), 2).alias('lifetime_value'),\n",
    "        F.count(F.expr('DISTINCT order_id')).alias('total_orders'),\n",
    "        F.round(F.avg('line_amount'), 2).alias('avg_order_line_value'),\n",
    "    )\n",
    ")\n",
    "\n",
    "# Join with RFM segments\n",
    "df_segs = gold('customer_segments').select('customer_id', 'segment', 'r_score', 'f_score', 'm_score')\n",
    "\n",
    "result_ltv = result_ltv.join(df_segs, on='customer_id', how='left')\n",
    "\n",
    "print('Customer Lifetime Value Ranking:')\n",
    "result_ltv.orderBy(F.col('lifetime_value').desc()).show(10, truncate=False)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# â”€â”€ Performance: Caching demo â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€\n",
    "import time\n",
    "\n",
    "# Without cache\n",
    "t0 = time.time()\n",
    "fact_sales.count()\n",
    "print(f'Without cache: {time.time()-t0:.2f}s')\n",
    "\n",
    "# Cache\n",
    "fact_sales.cache()\n",
    "\n",
    "t0 = time.time()\n",
    "fact_sales.count()\n",
    "print(f'First cached access: {time.time()-t0:.2f}s')\n",
    "\n",
    "t0 = time.time()\n",
    "fact_sales.count()\n",
    "print(f'Second cached access (fully warmed): {time.time()-t0:.2f}s')\n",
    "\n",
    "fact_sales.unpersist()"
   ]
  }
 ],
